<div class="container">
  <div class="row">

    <div class="col-md-6 col-sm-8 col-xs-8 col-xs-offset-2 col-sm-offset-2 col-md-offset-3 center text-center login-container">
      <h2 class="form-signin-heading"><span class="color-primary">Please log in</span></h2>
      <div class="row ">
        <div class="text-center">
          <% if flash[:error].present? %>
          <p>
            <strong>
              <%= flash[:error] %>
            </strong>
          </p>
          <% end %>
        </div>
      </div>

      <%= form_tag(login_path,{class:"form-signin"}) do %>

      <div class="form-group">

        <%= email_field_tag :email, nil, class: 'form-control text-center', placeholder:'Email address', required:true, autofocus: true %>
      </div>
      <div class="form-group">

        <%= password_field_tag :password, nil, class: 'form-control text-center', placeholder:'password' , required:true%>
      </div>

      <div class="actions">
        <%= button_tag(type:"submit",class: "links") do %>
        Login
        <% end %>
      </div>
      <% end %>
    </div>

  </div>
</div>

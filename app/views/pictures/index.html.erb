  <% counter = 1 %>
      <% @pictures.each do |picture| %>
      <%counter += 1 %>
      <%if counter == 1 %>
      <div class="row">
        <%end%>
  <div class="col-sm-6 col-md-3 setheight">
    <div class="thumbnail">
      <%= cl_image_tag( picture.image )%>

      <div class="caption">
        <h3>Thumbnail label</h3>
        <p>...</p>
        <%= link_to 'Show', picture, class: "btn btn-primary" %>
        <%= link_to 'Edit', edit_picture_path(picture), class: "btn btn-info"%>
        <%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %>

      </div>
    </div>
  </div>
  <%if counter == 1%>
</div>
<% end%>
<% if counter == 4 %>
<% counter = 0 %>
<% end %>
<% end %>

<!DOCTYPE html>
<html>
  <head>
    <title>Mybot</title>
    <!-- Latest compiled and minified CSS -->

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <%= csrf_meta_tags %>
    <%= cloudinary_js_config %>

    <link href="https://fonts.googleapis.com/css?family=Nunito|Oxygen|Source+Sans+Pro" rel="stylesheet">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Fredoka+One|Indie+Flower" rel="stylesheet">
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

  </head>

  <body>
    <div class="container">
      <div class="background-container"></div>


      <header>
        <div class="nav-background"></div>
        <div class="logo">
          <span class="color-primary">My</span>Bot
        </div>

        <nav class="nav-container">

          <% if @current_user.present? %>
          <ul class="nav-ul">
            <li><%= link_to 'UPLOAD PICTURE', '/dragdrop' %></li>
            <li><%= link_to 'PICTURES INDEX', pictures_path %></li>
            <% if @current_user.is_admin %>
            <li><%= link_to 'USERS INDEX', users_path %></li>
            <% end %>
            <li><%= link_to 'LOG OUT', login_path, method: :delete %></li>
            <li><%= link_to "Welcome #{@current_user.name}", user_path( @current_user ) ,class:"welcome"%></li>
          </ul>
          <% else %>
            <ul class="nav-ul">
              <li class="active">
                <%= link_to 'LOG IN', login_path, { :class=>"active" } %>
                <span class="sr-only">(current)</span>
              </li>
              <%# show sign up menu %>
              <li><%= link_to 'SIGN UP', new_user_path %></li>
          </ul>
          <% end %>
          <a href="javascript:void(0);" class="icon" onclick="">&#9776;</a>
        </nav>

      </header>


      </div>
</div>
    <%# end container %>

    <%= yield %>

<script>
  $("nav a.icon").click(function(ev){
    ev.preventDefault();
    $("nav a:not(.icon)").toggleClass("responsive");
  });
</script>
  </body>
</html>

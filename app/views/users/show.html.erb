<div class="container">


      <div class="profile-content-container">

        <div class="profile-image">
          <%= cl_image_tag( @user.image )%>
          <p class="name">
            <%= @user.name %>
          </p>

          <p class="email">
            <%= @user.email %>
          </p>

          <% if @current_user == @user %>
          <div class="links btn-group">
            <%= link_to 'Edit profile', edit_user_path(@user) ,class: "" %>
            <%= link_to 'Delete', user_path(@user), method: :delete, data: {confirm: 'Are you sure?'}, class: ""%>
          </div>
          <% end %>


        </div>



        <!-- <img src="<%= @user.image %>" alt=""> -->
        <!-- <strong>Image:</strong> -->



      </div>
</div>
